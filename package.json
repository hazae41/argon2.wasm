{
  "type": "module",
  "name": "@hazae41/argon2-wasm",
  "version": "1.0.7",
  "description": "WebAssembly port of Argon2",
  "repository": "github:hazae41/argon2.wasm",
  "author": "hazae41",
  "scripts": {
    "examine": "deno lint ./src/node && deno check ./src/node && deno test ./src/node",
    "version": "deno -RW ./x.vsync.ts && git add deno.json",
    "prepare": "deno -RW ./x.dsync.ts && deno install",
    "compile": "docker compose up --build --exit-code-from app && deno -RW ./patch.wasm.ts",
    "prepack": "rm -rf ./out && tsc && cp -r ./src/wasm/. ./out/wasm && tscousin && deno -RW ./patch.node.ts"
  },
  "files": [
    "./out"
  ],
  "exports": {
    ".": {
      "types": "./out/node/mod.d.ts",
      "import": "./out/node/mod.js"
    }
  },
  "devDependencies": {
    "@hazae41/phobos": "^2.0.16",
    "@hazae41/tscousin": "^1.0.28",
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "reproducible",
    "webassembly",
    "cryptography",
    "audited",
    "Argon2",
    "counter",
    "encryption",
    "decryption",
    "browser",
    "typescript",
    "rust",
    "unit-tested",
    "deno"
  ],
  "peerDependencies": {
    "@hazae41/memory-wasm": "^1.0.46"
  }
}
